<div class="col s12 m12">

    <h5>Your {{#if volunteer}}Volunteer{{else}}Coordinator{{/if}} Profile</h5>

    <table>
        <tbody>
            <tr>
                <td>First Name</td>
                <td>{{account.first_name}}</td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td>{{account.last_name}}</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{account.email}}</td>
            </tr>
            <tr>
                <td>Phone</td>
                <td>{{account.phone}}</td>
            </tr>

            {{#if volunteer}}

                <tr>
                    <td>Volunteer activities</td>
                    <td>{{activities.activity}}</td>
                </tr>

            {{else}}

                <!-- <tr>
        <td>Title</td>
        <td>{{title}}</td>
      </tr> -->


            {{/if}}

            <tr>
                <td>City</td>
                <td>{{account.city}}</td>
            </tr>
            <tr>
                <td>Bio</td>
                <td>{{account.bio}}</td>
            </tr>
        </tbody>
    </table>

    <a href="/profile/edit" class="waves-effect waves-light btn">Edit Profile <i class="material-icons right">mode_edit</i></a>
    {{#unless volunteer}}
        <a href="/events/create">
            <button type="button" name="button" class="waves-effect waves-light btn">Create an Event <i class="material-icons right">today</i></button>
        </a>
    {{/unless}}

</div>
